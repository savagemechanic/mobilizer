# Database Configuration
DATABASE_URL=postgresql://mobilizeruser:mobilizerpass@localhost:5432/mobilizerv2
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=mobilizerv2
DATABASE_USER=mobilizeruser
DATABASE_PASSWORD=mobilizerpass

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://localhost:6379

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=30d

# API Configuration
API_PORT=3000
API_HOST=0.0.0.0
NODE_ENV=development
API_PREFIX=/api/v1

# CORS Configuration
CORS_ORIGIN=http://localhost:5173
CORS_CREDENTIALS=true

# Firebase Configuration
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_PRIVATE_KEY=your-firebase-private-key
FIREBASE_CLIENT_EMAIL=your-firebase-client-email
FIREBASE_DATABASE_URL=https://your-project.firebaseio.com
FIREBASE_STORAGE_BUCKET=your-project.appspot.com

# AWS S3 Configuration (for file uploads)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=mobilizer-uploads

# Email Configuration (SendGrid/SMTP)
EMAIL_FROM=noreply@mobilizer.com
EMAIL_FROM_NAME=Mobilizer
SENDGRID_API_KEY=your-sendgrid-api-key
# OR SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password

# Frontend URL
FRONTEND_URL=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,video/mp4,application/pdf

# Pagination Defaults
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# WebSocket Configuration
WS_PORT=3001
WS_PATH=/ws

# Feature Flags
ENABLE_AI_SUMMARIES=true
ENABLE_WORD_CLOUDS=true
ENABLE_POLLS=true
ENABLE_EVENTS=true
ENABLE_MESSAGING=true

# Third-party APIs
GOOGLE_MAPS_API_KEY=your-google-maps-api-key
ANALYTICS_API_KEY=your-analytics-key

# Security
BCRYPT_ROUNDS=10
SESSION_SECRET=your-session-secret-change-this

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Monitoring (optional)
SENTRY_DSN=
NEW_RELIC_LICENSE_KEY=
