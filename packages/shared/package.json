{
  "name": "@mobilizer/shared",
  "version": "2.0.0",
  "private": true,
  "description": "Shared types, utilities, and constants for Mobilizer v2",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "eslint src/**/*.ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "@types/node": "^20.8.0",
    "tsup": "^7.2.0",
    "typescript": "^5.2.0",
    "eslint": "^8.50.0"
  }
}
