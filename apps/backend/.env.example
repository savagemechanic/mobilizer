# Database
DATABASE_URL="postgresql://user:password@localhost:5432/mobilizer?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT Authentication
JWT_SECRET="your-super-secret-jwt-key-min-32-characters-long"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_SECRET="your-super-secret-refresh-key-min-32-characters"
JWT_REFRESH_EXPIRES_IN="30d"

# Server
NODE_ENV="development"
PORT=4000

# CORS - Allowed Origins (comma-separated for multiple origins)
# Development: Use localhost
# Production: Add your Vercel frontend URL(s)
# Example: "http://localhost:3000,https://your-app.vercel.app,https://your-app-preview.vercel.app"
CORS_ORIGIN="http://localhost:3000"

# AWS S3 (optional - for file uploads)
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_S3_BUCKET="mobilizer-uploads"
AWS_REGION="us-east-1"
CDN_URL=""

# Firebase (optional - for FCM push notifications and alternative file storage)
# To get this: Firebase Console > Project Settings > Service Accounts > Generate new private key
# Then stringify the entire JSON file into a single line
FIREBASE_SERVICE_ACCOUNT='{"type":"service_account","project_id":"your-project",...}'
